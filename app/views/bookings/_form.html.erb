<%= simple_form_for [@starship, @booking] do |f| %>
  <div class="form-inputs">
    <%= f.input :booking_start_date, as: :date, html5: true %>
    <%= f.input :booking_end_date, as: :date, html5: true %>
  </div>

  <div class="price-calculator" style="color: white">
    <p id="price">Price per Day: £<span id="price-per-day"><%= @starship.cost %></span></p>
    <br>
    <p id="total-price">Total: £0</p>
  </div>

  <div class="form-actions">
    <%= f.button :submit, { class: " button btn btn-light", value: "Create Booking" } %>
  </div>
<% end %>