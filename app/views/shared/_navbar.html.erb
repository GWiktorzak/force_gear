<div class="navbar navbar-expand-lg navbar-light navbar-lewagon">

  <%= link_to "/", class: "navbar-brand" do %>

    <%= image_tag "logo.svg" %>
    <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <%= link_to "Home", root_path, class: "nav-link" %>
        <li class="nav-item">
          <%= link_to "Our Starships", starships_path, class: "nav-link" %>
    </ul>
      <% if user_signed_in? %>
        <div class="nav-link">
          <%= link_to new_starship_path, class: "nav-link-right" do %>
            <i class="fas fa-plus"></i> Add Starship
          <% end %>
        </div>
        <div class="nav-link">
          <%= link_to "#", class: "nav-link-right" do %>
            <i class="far fa-envelope"></i> Messages
          <% end %>
        </div>
        <div class="nav-item dropdown">
          <%= image_tag "https://pyxis.nymag.com/v1/imgs/a37/d4f/0ce40e4ebb623bc3d06f7985ad05b11f18-the-mandalorian.rsquare.w700.jpg", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "My account", bookings_path, class: "dropdown-item" %>
            <%= link_to "Messages", "#", class: "dropdown-item" %>
            <%= link_to "Account Settings", "#", class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </div>
      <% else %>
        <a class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link-right" %>
        </a>
      <% end %>
  </div>
</div>
