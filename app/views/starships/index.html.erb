<div class="container">
  <h1>STARSHIPS</h1>
  <div class="container index-body">
    <div class="cards">
      <% @starships.each do |starship| %>

        <div class="card">
            <%= link_to starship do %>
            <%= cl_image_tag starship.photo.key, height: 260, width: 375, crop: :fill %>

            <% end %>
            <div class="card-text">
              <p><%= starship.name %></p>
              <p><%= starship.model %></p>
            </div>
            <%= link_to 'Show', starship_path(starship) %>
        </div>
      <% end %>
    </div>

    <img id="map" src='https://api.mapbox.com/styles/v1/mapbox/streets-v11/static/2.3381,48.8693,10.45,0,0/600x1000?access_token=pk.eyJ1IjoiY2ljYWRhLTEiLCJhIjoiY2trc2NyeHFxMDhscjJxbXN1cmw2cXU5NyJ9.8ZeU8uCA6umwM8gzgkU4yw'>
  </div>
</div>
