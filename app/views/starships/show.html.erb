<div id="show_page">
  <div class="header_and_photos">
    <div class="header_and_location">
      <div class="header">
        <h3><%= @starship.name %></h3>
      </div>
      <div class="location">
        <p>4.69 rating / superhost / location of starship - In a galaxy far away (Staines)
      </div>
    </div>
    <div class="photo_and_info d-flex">
      <div class="photo">
        <%= cl_image_tag @starship.photo.key, height: 260, width: 375, crop: :fill %>
      </div>
      <div class="show_info">
        <p class="show_card_text">Model: <%= @starship.model %></p>
        <p class="show_card_text">Manufacturer: <%= @starship.manufacturer %></p>
        <p class="show_card_text">Cost: <%= @starship.cost %></p>
        <p class="show_card_text">Max Speed: <%= @starship.max_speed %></p>
        <p class="show_card_text">Crew required: <%= @starship.crew %></p>
        <p class="show_card_text">Passengers: <%= @starship.passengers %></p>
        <p class="show_card_text">Cargo Capacity: <%= @starship.cargo_capacity %></p>
        <p class="card-text">Class<%= @starship.starship_class %></p>
        <%= link_to new_starship_booking_path(@starship), class: 'btn btn-primary' do %>
          Make a booking
          <% end %><br>
        <%= link_to 'Edit', edit_starship_path %>

          <%= link_to "Delete",starship_path(@starship),
          method: :delete,
          data: { confirm: "Are you sure?" } %>
      </div>
    </div>


  </div>
</div>


